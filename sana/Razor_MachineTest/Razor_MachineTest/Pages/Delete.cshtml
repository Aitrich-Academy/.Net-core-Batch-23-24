@page
@model Razor_MachineTest.Pages.DeleteModel
@{
    ViewData["Title"] = "Delete Employee";
}
<h2>Delete Employee</h2>
<h3>Are you sure you want to delete this employee?</h3>
<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Employee Name
        </dt>
        <dd class="col-sm-10">
            @Model.Input.EmpName
        </dd>
        <dt class="col-sm-2">
            Designation
        </dt>
        <dd class="col-sm-10">
            @Model.Input.Designation
        </dd>
        <dt class="col-sm-2">
            Salary
        </dt>
        <dd class="col-sm-10">
            @Model.Input.Salary
        </dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Input.EmpId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="/Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

