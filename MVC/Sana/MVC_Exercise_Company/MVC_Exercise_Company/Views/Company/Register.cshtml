@model MVC_Exercise_Company.Models.Company

@{
    ViewData["Title"] = "Company Registration";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<div class="d-flex justify-content-center">
    <div class="card p-4 shadow-sm" style="width: 400px;">
        <form asp-action="Register" method="post">
            <div class="form-group mb-3">
                <label asp-for="CompanyName"></label>
                <input asp-for="CompanyName" class="form-control" />
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Website"></label>
                <input asp-for="Website" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="About"></label>
                <textarea asp-for="About" class="form-control"></textarea>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Vision"></label>
                <textarea asp-for="Vision" class="form-control"></textarea>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Mission"></label>
                <textarea asp-for="Mission" class="form-control"></textarea>
            </div>

            <button type="submit" class="btn btn-primary w-100">Register</button>

            <div class="mt-3 text-center">
                <span>Already have an account? </span>
                <a asp-action="Login" asp-controller="Company">Login</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

