@model MVC_Exercise_Company.Models.Company
@{
    ViewData["Title"] = "Company Profile";
}
<h2>@ViewData["Title"]</h2>
<h4>@Model.CompanyName</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">Website</dt>
        <dd class="col-sm-10">@Model.Website</dd>

        <dt class="col-sm-2">Vision</dt>
        <dd class="col-sm-10">@Model.Vision</dd>

        <dt class="col-sm-2">About</dt>
        <dd class="col-sm-10">@Model.About</dd>

        <dt class="col-sm-2">Mission</dt>
        <dd class="col-sm-10">@Model.Mission</dd>
    </dl>

</div>
<div>
    <a asp-controller="CompanyMember" asp-action="AddMember" asp-route-companyId="@Model.CompanyId" class="btn btn-success">Add Member</a>
    <a asp-action="Logout" class="btn btn-secondary">Logout</a>
</div>