@page "/"
@model Sevice_Repo_Demo.Pages.RegisterModel
<h2>Register</h2>

<form method="post">
    <div><input asp-for="Input.FirstName" placeholder="First Name" /></div>
    <div><input asp-for="Input.LastName" placeholder="Last Name" /></div>
    <div><input asp-for="Input.Email" placeholder="Email" /></div>
    <div><input asp-for="Input.Password" type="password" placeholder="Password" /></div>
    <button type="submit">Register</button>
</form>

<p>@Model.Message</p>
