@page
@model JobManagement.Pages.Job.DeleteModel
@{
    ViewData["Title"] = "Delete Job";
}

<h2>Delete Job</h2>

<h3>Are you sure you want to delete this job?</h3>

<div>
    <h4>Job Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Job Title</dt>
        <dd class="col-sm-10">@Model.JobPost.JobTitle</dd>

        <dt class="col-sm-2">Company</dt>
        <dd class="col-sm-10">@Model.JobPost.Company</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.JobPost.Location</dd>

        <dt class="col-sm-2">Employment Type</dt>
        <dd class="col-sm-10">@Model.JobPost.EmploymentType</dd>

        <dt class="col-sm-2">Salary Range</dt>
        <dd class="col-sm-10">@Model.JobPost.SalaryRange</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="JobPost.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
