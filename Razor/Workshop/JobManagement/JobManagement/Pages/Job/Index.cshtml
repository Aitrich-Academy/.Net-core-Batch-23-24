@page
@model JobManagement.Pages.Job.IndexModel
@{
}
<h2>Job Listings</h2>

<a asp-page="Create" class="btn btn-primary mb-3">Create New Job</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Job Title</th>
            <th>Company</th>
            <th>Location</th>
            <th>Employment Type</th>
            <th>Salary Range</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model.JobPosts)
        {
            <tr>
                <td>@job.JobTitle</td>
                <td>@job.Company</td>
                <td>@job.Location</td>
                <td>@job.EmploymentType</td>
                <td>@job.SalaryRange</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@job.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-page="Details" asp-route-id="@job.Id" class="btn btn-info btn-sm">View</a>
                    <a asp-page="Delete" asp-route-id="@job.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>