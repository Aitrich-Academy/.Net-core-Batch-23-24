@page 
@model JobManagement.Pages.Job.EditModel
@{
    ViewData["Title"] = "Edit Job";
}

<h2>Edit Job Post</h2>

<form method="post">
    <input type="hidden" asp-for="JobPost.Id" />

    <div class="form-group">
        <label asp-for="JobPost.JobTitle" class="control-label"></label>
        <input asp-for="JobPost.JobTitle" class="form-control" />
        <span asp-validation-for="JobPost.JobTitle" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="JobPost.Company" class="control-label"></label>
        <input asp-for="JobPost.Company" class="form-control" />
        <span asp-validation-for="JobPost.Company" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="JobPost.Location" class="control-label"></label>
        <input asp-for="JobPost.Location" class="form-control" />
        <span asp-validation-for="JobPost.Location" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="JobPost.EmploymentType" class="control-label"></label>
        <select asp-for="JobPost.EmploymentType" class="form-control">
            <option value="Full-time">Full-time</option>
            <option value="Part-time">Part-time</option>
            <option value="Contract">Contract</option>
        </select>
        <span asp-validation-for="JobPost.EmploymentType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="JobPost.SalaryRange" class="control-label"></label>
        <input asp-for="JobPost.SalaryRange" class="form-control" />
        <span asp-validation-for="JobPost.SalaryRange" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="JobPost.JobDescription" class="control-label"></label>
        <textarea asp-for="JobPost.JobDescription" class="form-control" rows="4"></textarea>
        <span asp-validation-for="JobPost.JobDescription" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="JobPost.Requirements" class="control-label"></label>
        <textarea asp-for="JobPost.Requirements" class="form-control" rows="3"></textarea>
        <span asp-validation-for="JobPost.Requirements" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-3">Save Changes</button>
    <a asp-page="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
