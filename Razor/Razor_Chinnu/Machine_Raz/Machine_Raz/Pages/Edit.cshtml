@page
@model Machine_Raz.Pages.EditModel
@{
}
<h3>Job Post</h3>

<form method="post">
    <input type="hidden" asp-for="JobPost.Id" />


    <div>
        <label asp-for="JobPost.JobTitle"></label>
        <input asp-for="JobPost.JobTitle" />
        <span asp-validation-for="JobPost.JobTitle"></span>

    </div>
    <div>
        <label asp-for="JobPost.Company"></label>
        <input asp-for="JobPost.Company" />
        <span asp-validation-for="JobPost.Company"></span>

    </div>
    <div>
        <label asp-for="JobPost.Location"></label>
        <input asp-for="JobPost.Location" />
        <span asp-validation-for="JobPost.Location"></span>

    </div>
    <div>
        <label asp-for="JobPost.EmploymentType"></label>
        <select asp-for="JobPost.EmploymentType">
            <option value="Full-Time">Full-Time</option>
            <option value="Part-Time">Part-Time</option>
            <option value="Contract">Contract</option>
        </select>
        <span asp-validation-for="JobPost.EmploymentType"></span>


    </div>
    <div>
        <label asp-for="JobPost.SalaryRange"></label>
        <input asp-for="JobPost.SalaryRange" />
        <span asp-validation-for="JobPost.SalaryRange"></span>

    </div>
    <div>
        <label asp-for="JobPost.JobDescription"></label>
        <input asp-for="JobPost.JobDescription" />
        <span asp-validation-for="JobPost.JobDescription"></span>

    </div>

    <div class="form-group">
        <label asp-for="JobPost.Requirements" class="control-label"></label>
        <textarea asp-for="JobPost.Requirements" class="form-control" rows="3"></textarea>
        <span asp-validation-for="JobPost.Requirements" class="text-danger"></span>
    </div>


    <button type="submit" class=" btn btn-danger">SAVE CHANGES</button>
    <a asp-page="Index" class=" btn btn-danger">CANCEL</a>

</form>