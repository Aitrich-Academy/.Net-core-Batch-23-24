@page "/"
@model Exercise_Razor.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>
    Register
</h2>

<form method="post">

    <div style="margin-bottom:15px;">
        <label asp-for="Input.FirstName" class="control-label" ></label>
        <input asp-for="Input.FirstName" class="form-control" />
        <span asp-validation-for="Input.FirstName" ></span>
    </div>

    <div style="margin-bottom:15px;">
        <label asp-for="Input.LastName" class="control-label" style="display:block; margin-bottom:5px; font-weight:bold; color:#555;"></label>
        <input asp-for="Input.LastName" class="form-control" style="width:100%; padding:10px; border:1px solid #ccc; border-radius:5px; box-sizing:border-box;" />
        <span asp-validation-for="Input.LastName" class="text-danger" style="font-size:12px; color:red;"></span>
    </div>

    <div style="margin-bottom:15px;">
        <label asp-for="Input.Email" class="control-label" style="display:block; margin-bottom:5px; font-weight:bold; color:#555;"></label>
        <input asp-for="Input.Email" class="form-control" style="width:100%; padding:10px; border:1px solid #ccc; border-radius:5px; box-sizing:border-box;" />
        <span asp-validation-for="Input.Email" class="text-danger" style="font-size:12px; color:red;"></span>
    </div>

    <div style="margin-bottom:15px;">
        <label asp-for="Input.Password" class="control-label" style="display:block; margin-bottom:5px; font-weight:bold; color:#555;"></label>
        <input asp-for="Input.Password" class="form-control" type="password" style="width:100%; padding:10px; border:1px solid #ccc; border-radius:5px; box-sizing:border-box;" />
        <span asp-validation-for="Input.Password" class="text-danger" style="font-size:12px; color:red;"></span>
    </div>

    <div style="margin-bottom:15px;">
        <label asp-for="Input.ConfirmPassword" class="control-label" style="display:block; margin-bottom:5px; font-weight:bold; color:#555;"></label>
        <input asp-for="Input.ConfirmPassword" class="form-control" type="password" style="width:100%; padding:10px; border:1px solid #ccc; border-radius:5px; box-sizing:border-box;" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger" style="font-size:12px; color:red;"></span>
    </div>

    <button type="submit" style="width:100%; padding:10px; background-color:#007BFF; color:white; border:none; border-radius:5px; cursor:pointer; font-size:16px;">
        Register
    </button>
</form>

<p style="text-align:center; color:green; margin-top:15px;">@Model.Message</p>
