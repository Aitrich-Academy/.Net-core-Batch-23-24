@page "/Create"
@using Blazor_New.Data.Interfaces
@using Blazor_New.Data.Models
@inject IBookService bookService
@inject NavigationManager navigationManager
<h3>Add Book</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form @onsubmit="Add">

            <div class="form-group">
                <span class="text-danger">*</span>
                <label for="Title" class="control-label">Title</label>
                <input id="Title" class="form-control" @bind="booklist.Title" />

            </div>

            <div class="form-group">
                <span class="text-danger">*</span>
                <label for="Author" class="control-label">Author</label>
                <input id="Author" class="form-control" @bind="booklist.Author" />

            </div>

            <div class="form-group">
                <button class="mt-3 btn btn-primary" type="submit">Add Book</button>
            </div>

            <div>
                <NavLink class="nav-link" href="/">Back to List</NavLink>
            </div>
        </form>
    </div>
</div>
@code {
    Book booklist = new Book();

    protected void Add()
    {
        bookService.AddBook(booklist);
        navigationManager.NavigateTo("/");
    }
}
